// Helper functions
const getCardsByMode = (mode) => {
  return gameCards.filter(card => card.mode === mode);
};

const getWarmUpCards = () => getCardsByMode('THE WARM UP');

const getRandomCards = (count, mode = null) => {
  let filteredCards = gameCards;
  if (mode) {
    filteredCards = getCardsByMode(mode);
  }
  const shuffled = [...filteredCards].sort(() => 0.5 - Math.random());
  return shuffled.slice(0, Math.min(count, filteredCards.length));
};

const getRandomCardsByMode = (mode, count) => getRandomCards(count, mode);

