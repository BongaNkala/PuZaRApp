                />

                <View style={styles.controls}>
                  <TouchableOpacity 
                    style={[styles.controlButton, styles.drawButton]}
                    onPress={drawNewCard}
                  >
                    <Text style={styles.controlButtonText}>Draw Card</Text>
                  </TouchableOpacity>
                  
                  <TouchableOpacity 
                    style={[styles.controlButton, styles.statsButton]}
                    onPress={() => {
                      Alert.alert(
                        'Game Stats',
                        `Total Questions: ${gameStats.totalQuestions}\nCorrect: ${gameStats.correctAnswers}\nAccuracy: ${accuracy.toFixed(1)}%\nTotal Drinks: ${totalDrinks}\nCards Used: ${usedCards.size}/${modeGames.length}`
                      );
                    }}
                  >
                    <Text style={styles.controlButtonText}>Stats</Text>
                  </TouchableOpacity>
                </View>

                {cardHistory.length > 0 && (
                  <View style={styles.historySection}>
                    <Text style={styles.historyTitle}>Recent Cards</Text>
                    <FlatList
                      data={cardHistory}
                      renderItem={renderHistoryCard}
                      keyExtractor={(item, index) => index.toString()}
                      horizontal
                      showsHorizontalScrollIndicator={false}
                    />
                  </View>
                )}
              </>
            )}
          </Animated.View>
        </View>

        <Modal
          visible={showAnswerModal}
          transparent
          animationType="fade"
          onRequestClose={() => setShowAnswerModal(false)}
        >
          <Animated.View 
            style={[
              styles.modalOverlay,
              { transform: [{ translateY: slideAnim }] }
            ]}
          >
            <View style={styles.modalContainer}>
              {currentCard && (
                <>
                  <View style={styles.modalHeader}>
                    <View>
                      <Text style={styles.modalTitle}>CHALLENGE!</Text>
                      <Text style={styles.modalSubtitle}>For: {currentPlayer}</Text>
                    </View>
                    
                    <Animated.View 
                      style={[
                        styles.timerContainer,
                        { transform: [{ scale: pulseAnim }] }
                      ]}
                    >
                      <Text style={[
                        styles.timerText,
                        timer <= 10 && styles.timerWarning
                      ]}>
                        Timer: {timer}s
                      </Text>
                    </Animated.View>
                  </View>

                  <View style={styles.cardContent}>
                    <Text style={styles.cardQuestion}>{currentCard.text}</Text>
                    
                    <View style={styles.cardMeta}>
                      <View style={[
                        styles.difficultyBadge,
                        { backgroundColor: 
                          currentCard.difficulty === 'easy' ? '#10B981' :
                          currentCard.difficulty === 'medium' ? '#F59E0B' : '#EF4444'
                        }
                      ]}>
                        <Text style={styles.difficultyText}>
                          {currentCard.difficulty.toUpperCase()}
                        </Text>
                      </View>
                      
                      <View style={styles.penaltyBadge}>
                        <Text style={styles.penaltyText}>
                          {currentCard.penaltyShots} SHOT{currentCard.penaltyShots > 1 ? 'S' : ''}
                        </Text>
                      </View>
                    </View>
                    
                    {currentCard.hint && (
                      <TouchableOpacity 
                        style={styles.hintSection}
                        onPress={() => setShowHint(!showHint)}
                      >
                        <Text style={styles.hintLabel}>
                          {showHint ? currentCard.hint : 'Tap for hint'}
                        </Text>
                      </TouchableOpacity>
                    )}
                  </View>

                  <TextInput
                    style={styles.answerInput}
                    placeholder="Type your answer here..."
                    placeholderTextColor="#94A3B8"
                    value={userAnswer}
                    onChangeText={setUserAnswer}
                    autoCapitalize="characters"
                    autoCorrect={false}
                    onSubmitEditing={checkAnswer}
                  />

                  <View style={styles.modalActions}>
                    <TouchableOpacity 
                      style={[styles.actionButton, styles.drinkButton]}
                      onPress={() => {
                        Alert.alert(
                          'Drink Up!',
                          `${currentPlayer} must drink ${currentCard.penaltyShots} shot${currentCard.penaltyShots > 1 ? 's' : ''}!\n\nWant to try answering instead?`,
                          [
                            { text: 'Try Answer', style: 'cancel' },
                            { 
                              text: `Drink ${currentCard.penaltyShots} Shot${currentCard.penaltyShots > 1 ? 's' : ''}`, 
                              onPress: () => {
                                setShowAnswerModal(false);
                                nextPlayer();
                              },
                              style: 'destructive'
                            }
                          ]
                        );
                      }}
                    >
                      <Text style={styles.drinkButtonText}>Drink</Text>
                    </TouchableOpacity>
                    
                    <TouchableOpacity 
                      style={[
                        styles.actionButton, 
                        styles.submitButton,
                        !userAnswer.trim() && styles.disabledButton
                      ]}
                      onPress={checkAnswer}
                      disabled={!userAnswer.trim()}
                    >
                      <Text style={styles.submitButtonText}>Submit Answer</Text>
                    </TouchableOpacity>
                  </View>
                </>
              )}
            </View>
          </Animated.View>
        </Modal>
      </SafeAreaView>
    </ImageBackground>
  );
};

